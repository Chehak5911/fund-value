{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@analytics": ["analytics"],
      "@assets": ["assets"],
      "@components": ["components"],
      "@config": ["config"],
      "@constants": ["constants"],
      "@hooks": ["hooks"],
      "@locales": ["locales"],
      "@models": ["models"],
      "@pages": ["pages"],
      "@routes": ["routes"],
      "@services": ["services"],
      "@theme": ["theme"],
      "@types": ["types"],
      "@utils": ["utils"],
    },
    "types": ["vite/client"]
  },

  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
